{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "skipLibCheck": true
    },
    "include": [
        ".vitepress/**/*.mts",
        ".vitepress/**/*.ts",
        ".vitepress/**/*.vue",
        ".vitepress/**/*.md"
    ],
    "vueCompilerOptions": {
        "vitePressExtensions": [
            ".md"
        ]
    }
}